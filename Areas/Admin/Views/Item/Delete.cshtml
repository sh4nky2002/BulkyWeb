@model MyAspNetCoreApp.Models.ItemModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-white">Delete Item</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <h4>Are you sure you want to delete this item?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>

            <dt class="col-sm-2">Discount</dt>
            <dd class="col-sm-10">@Model.Discount</dd>

        
            <dt class="col-sm-2">Is Published</dt>
            <dd class="col-sm-10">
                @(Model.IsPublished ? "Yes" : "No")
            </dd>

            <dt class="col-sm-2">Display In Homepage</dt>
            <dd class="col-sm-10">
                @(Model.DisplayInHomepage ? "Yes" : "No")
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
