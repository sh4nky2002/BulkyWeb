@model MyAspNetCoreApp.Models.ItemModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
<div class="row">
    <div class="col-md-6">
        <h2 class="text-white">Edit Item</h2>
    </div>
</div>
    </div>
    <div class="card-body p-4">
  <form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden field for Id (to identify the item being edited) -->
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" disabled />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <!-- Name field -->
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Price field -->
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Discount field -->
    <div class="form-group">
        <label asp-for="Discount" class="control-label"></label>
        <input asp-for="Discount" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <!-- IsPublished field (checkbox) -->
    <div class="form-group">
        <label asp-for="IsPublished" class="control-label"></label>
        <input asp-for="IsPublished" type="checkbox" />
        <span asp-validation-for="IsPublished" class="text-danger"></span>
    </div>

    <!-- DisplayInHomepage field (checkbox) -->
    <div class="form-group">
        <label asp-for="DisplayInHomepage" class="control-label"></label>
        <input asp-for="DisplayInHomepage" type="checkbox" />
        <span asp-validation-for="DisplayInHomepage" class="text-danger"></span>
    </div>

    <!-- Submit button -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
</div>
@{
    ViewData["Title"] = "Edit Item";
}


<!-- Display validation errors if any -->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

