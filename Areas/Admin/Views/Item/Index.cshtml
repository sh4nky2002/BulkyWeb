@model IEnumerable<MyAspNetCoreApp.Models.ItemModel>

@{
    ViewData["Title"] = "Item List";
}

<h2>Item List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Discount</td>
                <!-- Actions column -->
                <td>
                    <a href="@Url.Action("Edit", "Item", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Item", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Item")">Create New Item</a>
